<div class="mx-5">
    <div class="row">


        <div class="col my-4 p-4" style="background-color: #EAEAEA; border: 3px solid #272343; border-radius: 5px;">

            <h3>生産者一覧ページ</h3>

            <div class="row">
                <% @producers.each do |producer| %>
                    <div class="mx-auto m-4 p-4 border _producer">
                        
                        <div class="col">
                            <%= link_to producer_path(producer.id) do %>
                                <%= attachment_image_tag producer, :producer_image, :fill, 200, 200, class: "border", fallback: "no-image.jpg", size:'200x200' %>
                            <% end %>
                            <div class="pt-1"></div>
                            <%= link_to producer_path(producer.id) do %>
                                <h5><%= producer.producer_name %></h5>
                            <% end %>

                            <%= link_to "生産者の方の詳細をみる", producer_path(producer.id), class:"btn btn-myh col-12" %>
                        </div>

                    </div>
                <% end %>
            </div>

                <div class="row">
                    <div class="mx-auto mt-4">
                        <%= paginate @producers %>
                    </div>
                </div>
        </div>

    </div>
</div>
