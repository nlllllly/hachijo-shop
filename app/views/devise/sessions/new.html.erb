<div class="container">
  <div class="row">

    <div class="text-center mx-auto">

      <h2>ログインページ</h2>
    
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field form-label-group">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter email", class:"form-control" %>
        </div>

        <div class="field form-label-group">
          <%= f.label :password, "パスワード" %><br />
          <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"form-control" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-group">
            <%= f.check_box :remember_me %>
            <%= f.label "アカウントを記憶する" %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class:"btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>


      <%= render "devise/shared/links" %>


    </div>

  </div>
</div>