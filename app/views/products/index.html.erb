
<div class="container">
    <h3>商品一覧</h3>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>商品名</th>
                        <th>価格</th>
                        <th>在庫数</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <% @products.each do |product| %>
                        <tr>
                            <td><%= attachment_image_tag product, :product_image, :fill, 50, 50, class: "", fallback: "no-image.jpg", size:'50x50' %></td>
                            <td><%= product.name %></td>
                            <td><%= product.price %>円</td>
                            <td><%= product.stock %>個</td>
                            <td><%= link_to "編集", edit_admins_product_path(product.id), class:"btn-sm btn-success" %></td>
                            <td><%= link_to "削除", admins_product_path(product.id), class:"btn-sm btn-danger", method:"delete", data:{ confirm: "本当に削除しますか？" } %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="mx-auto mt-4">
            <%= paginate @products %>
        </div>
    </div>
</div>